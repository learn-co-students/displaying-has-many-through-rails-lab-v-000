class DoctorsController < ApplicationController
	def index
		@doctors = doctor.all
	end

	def show
		@doctor = doctor.find(params[:id])
	end

	def new
		@doctor = doctor.new
		@patient = Patient.all
	end

	def create
		doctor = doctor.create(params[:doctor])
		redirect_to doctor_path(doctor)
	end

	def edit
		@doctor = doctor.find(params[:id])
		@patient = Patient.all
	end

	def update
		doctor = doctor.find(params[:id])
		doctor.update(params.require(:doctor))
		redirect_to doctor_path(doctor)
	end
end
