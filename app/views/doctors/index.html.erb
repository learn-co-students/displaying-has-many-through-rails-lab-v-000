<table>
  <tr>
    <th>Doctor</th>
    <th>Department</th>
    <th style="text-align:center"># of Patients</th>
  </tr>
  <% @doctors.each do |doctor| %>
    <tr>
      <td><%= link_to doctor.name, doctor %></td>
      <td><%= doctor.department %></td>
      <td style="text-align:center"><%= doctor.num_of_patients %></td>
    </tr>
  <% end %>
</table>
