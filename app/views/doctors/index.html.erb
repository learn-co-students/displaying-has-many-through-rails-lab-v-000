<!-- Display each doctor's name, a link to their show page, and a count of their patients. -->
<h1>Seattle Grace Hospital - List of Doctors</h1>

<% @doctors.each do |doctor| %>
<ul>
  <li>Doctor Name: <%= link_to doctor.name, doctor_path(doctor) %></li>
  <li>Patient Count: <%= doctor.patients.count %></li>
</ul>
<% end %>
