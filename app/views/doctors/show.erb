<h1><%= @doctor.name %></h1>
<h3>Department: <%= @doctor.department %> </h3>

<h3>Appointments:</h3>

<% @doctor.appointments.each do |appt| %>
  <ul>
    <li>
      <%= link_to appt.patient.name, appt.patient %> <br>
      Appointment Dates: <%= appt.appointment_datetime.strftime("%B %d, %Y at %H:%M") %>
    </li>
  </ul>
<% end %>