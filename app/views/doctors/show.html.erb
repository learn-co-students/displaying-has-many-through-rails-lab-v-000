<h1>Doctor <%= @doctor.name %></h1>

<h2>Department</h2>
<%= @doctor.department %><br /><br />
<h2>Appointments</h2>
<ul>
  <% @doctor.appointments.each do |appt| %>
  <li>
  <%= appt.appointment_datetime.strftime("%B %d, %Y at %H:%M") %>
  <%= link_to appt.patient.name, patient_path() %>
  </li>
  <% end %>
</ul>
