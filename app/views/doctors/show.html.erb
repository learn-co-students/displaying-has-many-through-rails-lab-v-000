<h1>Dr. <%= @doctor.name %></h1>

<h3>Department: <%= @doctor.department %></h3>

<h3>Appointments:</h3>
<ul>
  <% @doctor.appointments.each do |appt| %>
    <li>
      <%= appt.appointment_datetime.strftime("%B %d, %Y at %k:%M") %>
       -
      <%= link_to appt.patient.name, patient_path(appt.patient) %>
    </li>
  <% end %>
</ul>
