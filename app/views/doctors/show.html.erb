<h2>Dr. <%= @doctor.name %></h2> <br>
<h3>Department: <%= @doctor.department %></h3><br> 
<h3>Appointments:</h3>
<ul><% @doctor.appointments.each do |appointment| %> 
    <li><%= link_to appointment.patient.name, patient_path(appointment) %> on
    <%= appointment.appointment_datetime.strftime("%B %d, %Y at %k:%M") %>
        
    </li>
    <% end %>
    </ul>