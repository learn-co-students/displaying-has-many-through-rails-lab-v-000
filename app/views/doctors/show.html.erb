<h1><%=@doctor.name%></h1>
<h3>Department: <%=@doctor.department%></h3>
<h3>Appointments</h3>
<%@doctor.appointments.each do |appointment|%>
	<h4><%=appointment.appointment_datetime.strftime("%B %d, %Y at %H:%M")%></h4>
	<%=link_to appointment.patient.name, patient_path(appointment.patient)%>
<%end%>