<h2>Dr. <%= @doctor.name %><h2>
<h4><%= @doctor.department %></h4>

<h2>Appointments</h2>
<% @doctor.appointments.each do |appointment| %>
  <p>Patient: <%= link_to appointment.patient.name, appointment.patient %> | 
  Date: <%= appointment.appointment_datetime.strftime("%B %-d, %Y at %H:%M") %> </p>
<% end %>
