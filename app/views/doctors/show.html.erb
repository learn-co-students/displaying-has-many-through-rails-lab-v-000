<h1>Doctor</h1>
<h2><%= @doctor.name %></h2>
<h2>Age: <%= @doctor.department %></h2>
<h3>Appointments</h3>
<ul>
  <% @doctor.appointments.each do |appointment| %>
    <li><%= appointment.appointment_datetime.strftime("%B %d, %Y at %H:%M") %> with <%= link_to appointment.patient_name, patient_path(appointment.patient) %></li>
  <% end %>
</ul>
