<h1><%= @doctor.name %></h1>
<h3><%= @doctor.department %></h3>
<table>
	<tr>
		<th>Appointment Time</th>
		<th>Patient Name</th>
	</tr>
	<% @doctor.appointments.each do |appt| %>
		<tr>
			<% t = appt.appointment_datetime %>
			<td><%= t.strftime("%B %-d, %Y at %H:%M") %></td>

			<td><%= link_to appt.patient.name, patient_path(appt.patient) %></td>
		</tr>
	 <% end %>
</table>