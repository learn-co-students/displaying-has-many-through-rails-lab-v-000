<h1><%=@doctor.name%></h1>
<h3><%=@doctor.department%></h3>

<%@doctor.patients.each do |patient|%>
<h4><%=link_to patient.name, patient_path(patient)%></h4><br>
<%end%>
<%@doctor.appointments.each do |app|%>
<p><%=app.appointment_datetime.strftime("%B %d, %Y at %H:%M")%>-<%=link_to app.patient.name, patient_path(app.patient)%><br></p>
<%end%>
