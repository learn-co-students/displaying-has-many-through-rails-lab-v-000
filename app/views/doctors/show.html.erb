<h2><%= @doctor.name %> - <%= @doctor.department %></h2>
<ol>
    <% @doctor.appointments.each do |appt| %>
        <li><%= link_to appt.patient.name, appt.patient %>
            <%= appt.appointment_datetime.strftime("%B %e, %Y") %>
            at <%= appt.appointment_datetime.to_s(:time) %></li>
    <% end %>
    </li>
</ol>
