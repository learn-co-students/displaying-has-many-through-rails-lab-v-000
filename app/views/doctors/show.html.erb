<h2> <%= @doctor.name %></h2>

<h3><%= @doctor.department %></h3>

<table><th>time</th><th>patient</th>

<% @doctor.appointments.each do |appointment| %>
  <tr><td><%= appointment.appointment_datetime.strftime("%B %d, %Y at %H:%M") %></td>
  <td><%= link_to appointment.patient.name, patient_path(appointment.patient) %></td></tr>
<% end %>

</table>
