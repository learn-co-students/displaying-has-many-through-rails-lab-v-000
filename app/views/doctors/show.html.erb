<h2><%= "Dr. #{@doctor.name} Patient's Appointments" %></h2>
<ul>
  <% @doctor.appointments.each do |app| %>
  <li>
  <%= link_to app.patient.name, patient_path(app.patient)%>
  <%=  "#{app.appointment_datetime.strftime('%B %d, %Y')}"%>
   <%= "at #{app.appointment_datetime.strftime('%H:%M')}" %>
  </li>

  <%end%>
</ul>
