Doctor:

<h2>Name: <%= @doctor.name %></h2>
<h3>Department: <%= @doctor.department %></h3>

Appointments:

  <% @doctor.appointments.each do |appointment| %>
    <li><%= appointment.appointment_datetime.strftime('%B %e, %Y at %H:%M') %> - <%= link_to appointment.patient.name, patient_path(appointment.patient) %></li>
  <% end %>
