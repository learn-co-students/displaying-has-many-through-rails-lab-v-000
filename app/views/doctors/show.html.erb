<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @doctor.name %>
</p>

<p>
  <strong>Department:</strong>
  <%= @doctor.department %>
</p>

<%= link_to 'Edit', edit_doctor_path(@doctor) %> |
<%= link_to 'Back', doctors_path %>

<% @doctor.appointments.each do |a| %>

<%= a.appointment_datetime.strftime("%B %e, %Y at %H:%M") %>
<%= link_to a.patient.name, patient_path(a.patient) %>

<% end %>
