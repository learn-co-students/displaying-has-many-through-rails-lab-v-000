<!-- displays the doctor's name, department, and appointments, with each appointment's date, time, and patient name (linking to the patient's show page) -->
<h2><%= @doctor.name %></h2>
<h4><%= @doctor.department %></h4>
<h4>Appointments:</h4>

<ul>
  <% @appointments_by_date.each do |appointment| %>
    <li>
      <p>
        Time: <%= appointment.appointment_time %>
        <br>
        With: <%= link_to appointment.patient.name, appointment.patient %>
      </p>
    </li>
  <% end %>
</ul>
