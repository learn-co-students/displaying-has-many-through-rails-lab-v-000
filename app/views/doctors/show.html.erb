<h1><%= @doctor.name %></h1>
<p>Department: <%= @doctor.department %></p>

<h3>Appointments</h3>
<ul>
  <% @doctor.appointments.each do |appointment| %>
    <li><%= appointment.appointment_datetime.strftime("%B %d, %Y at %H:%M") %>
      <%= link_to appointment.patient.name, patient_path(appointment.patient) %></li>
  <% end %>
</ul>
