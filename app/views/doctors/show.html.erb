<h1><%= @doctor.name %>'s Page</h1>
<h3>Department: <%= @doctor.department %></h3>

<h3>Appointments</h3>

<% @doctor.appointments.each do |appt| %>
  <strong><p>Patient: <%= link_to appt.patient.name, patient_path(appt.patient) %></p></strong>
  <p>Time: <%= appt.appointment_datetime.strftime(" %B %e, %Y at %k:%M") %></p>
<% end %>
