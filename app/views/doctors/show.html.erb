<h2>Dr. <%=@doctor.name %></h2>
<p>
<ul>
    <%= @doctor.appointments.each do |appt| %>
        <li>
            <label>Date & Time: </label><%= appt.appointment_datetime.strftime("%B %d, %Y at %k:%M") %>
            <label>Patient: </label><%= link_to appt.patient.name, patient_path(appt.patient) %>
        </li>
    <% end %>
</ul>
</p>