<h2><%= @doctor.name %></h2>
<h3><%= @doctor.department %></h3>
<h4>Appointments:</h4>
<ul>
  <% @doctor.appointments.each do |appointment| %>
    <li>
      <%= appointment.appointment_datetime.strftime("%B %d, %Y at %H:%M") %>, with <%= link_to appointment.patient_name, patient_path(appointment.patient) %>
    </li>
  <% end %>
</ul>
