<h2><%= @doctor.name %></h2>
<p>
  Department: <%= @doctor.department %>
</p>
Appointments:
  <% @doctor.appointments.each do |appointment| %>
    <%= link_to appointment.patient.name, patient_path(appointment.patient) %> on
    <%= appointment.appointment_datetime.strftime("%B %d, %Y at %R") %>
  <% end %>
