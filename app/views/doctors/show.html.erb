<h1><%= @doctor.name %></h1>
<p>Department: <%= @doctor.department %></p>
<p> Appointments: </p>
  <ul>
    <% @doctor.appointments.each do |appt| %>
      <li><%= link_to appt.patient.name, patient_path(appt.patient) %> at <%= appt.appointment_datetime.strftime("%B %d, %Y at %k:%M") %></li>
    <% end %>
  </ul>
