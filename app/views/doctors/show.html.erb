<h1><%= @doctor.name %></h1>
<h3><%= @doctor.department %></h3>

<h4>Appointments</h4>
<ul>
  <% @doctor.appointments.each do |appointment| %>
    <li>                <!-- January 12, 2016 at 3:00 -->
      <%= appointment.appointment_datetime.strftime("%B %d, %Y at %H:%M %P") %>
      with <%= link_to appointment.patient.name, patient_path(appointment.patient) %>
    </li>
  <% end %>
</ul>