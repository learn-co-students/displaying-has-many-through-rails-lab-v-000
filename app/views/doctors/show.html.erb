<h1><%= @doctor.name %></h1>

<ul>
  <li>
    <%= @doctor.department %>
    <ul>
      <% @doctor.appointments.each do |appt| %>
        <li>
          <%= appt.appointment_datetime.strftime("%B %d, %Y at %k:%M") %> : <%= link_to appt.patient.name, patient_path(appt.patient.id)%>
        </li>
      <% end %>
    </ul>
  </li>
</ul>
