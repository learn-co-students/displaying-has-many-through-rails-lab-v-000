<h3> <%= @doctor.name %>, <%= @doctor.department %> </h3>

<ul>
  <% @doctor.appointments.each do |appt| %>
  <li><%=appt.appointment_datetime.strftime('%B %d, %Y')%> at
    <%=appt.appointment_datetime.strftime('%H:%M')%> with
    <%=link_to appt.patient.name, patient_path(appt.patient)%></li>
  <%end%>
</ul>
