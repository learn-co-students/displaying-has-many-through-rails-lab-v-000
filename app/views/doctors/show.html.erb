<h1><%= @doctor.name %></h1>

<h2>Department</h2>
<%= @doctor.department %>

<h2>Appointments</h2>

  <% @doctor.appointments.each do |appt| %>
    <ul>
      <li>Date &amp; time: <%= appt.appointment_datetime.strftime("%B %d, %Y at %k:%M") %></li>
      <li><%= link_to(appt.patient.name, patient_path(appt.patient)) %></li>
    </ul>
  <% end %>
