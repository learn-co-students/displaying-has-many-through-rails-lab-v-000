<h1><%= @doctor.name %></h1>
<h3>Department: <%= @doctor.department %></h3>

<h2>Appointments - <%= @doctor.appointments.size %></h2>
<% @doctor.appointments.each {|a| %>
    <%= "#{a.appointment_datetime.strftime("%B %d, %Y at %H:%M")}" %> - <%= link_to "#{a.patient.name}", patient_path(a.patient) %><br>
<% } %>

