<h3>Dr. <%=@doctor.name%>'s Appointments</h3>

<%@doctor.appointments.each_with_index do |appt, i|%>
  <%=i+1%>. <%=appt.appointment_datetime.strftime("%B %d, %Y")%> at <%=appt.appointment_datetime.strftime("%H:%M")%>
  <br/>
  Patient: <%=link_to appt.patient.name, patient_path(appt.patient)%><br/>
<%end%>
