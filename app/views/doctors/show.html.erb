<h1><%= @doctor.name %>, <%= @doctor.department %></h1>

<h2>Appointments: </h2>
<ul>
<% @doctor.appointments.each do |app|%>
	<li><%= link_to app.patient.name, app.patient%>, on <%= app.appointment_datetime.strftime("%B %d, %Y") %> at <%= app.appointment_datetime.strftime("%H:%M")%></li>
<% end %>
</ul>