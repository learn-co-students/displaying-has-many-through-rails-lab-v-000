<h2><%= @doctor.name %></h2>
<h3>Department: <%= @doctor.department %></h3>
<h3>Appointments:</h3>
  <ul>
<% @doctor.appointments.each do |appointment| %>
  <li><%= link_to appointment.patient.name, patient_path(appointment.patient) %> at <%= appointment.appointment_datetime.strftime("%B %e, %Y at %k:%M") %></li>
<% end %>
  </ul>
