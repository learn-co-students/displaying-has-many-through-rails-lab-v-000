<h1>Dr. <%= @doctor.name %></h1>
<h2>Department: <% @doctor.department %></h2><br>

<ol>
  <%= @doctor.appointments.each do |appointment| %>
    <li><%= appointment.appointment_datetime.strftime('%B %d, %Y at %H:%M') %> - <%= link_to appointment.patient.name, patient_path(appointment.patient) %></li><br>
  <% end %>
</ol>
