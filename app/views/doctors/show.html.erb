<h1><%= @doctor.name %></h1>

<h3>Department: <%= @doctor.department %></h3>

<h4> Appointments: </h4>

<ul>
<% @doctor.appointments.each do |appt| %>
  <li><%= link_to appt.patient.name, patient_path(appt.patient) %> - <%= link_to appt.appointment_datetime.strftime("%B %e, %Y at %k:%M"), appointment_path(appt) %></li>
<% end %>
</ul>
