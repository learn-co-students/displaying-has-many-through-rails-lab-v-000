<h2><%= @doctor.name %></h2>
<h3><%= @doctor.department %></h3>

    <% @doctor.appointments.each do |appointment| %>
        <p>
            <%= link_to appointment.patient.name, patient_path(appointment.patient) %> has an appointment on <%= appointment.appointment_datetime.strftime("%B %d, %Y at %H:%M") %>
        </p>
    <% end %>
