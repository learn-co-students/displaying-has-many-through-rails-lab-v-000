<h1><%= @doctor.name %></h1>

<h2><%= @doctor.department %></h2>

<ul>
  <% @doctor.appointments.each do |appointment| %>
    <li><%= appointment.appointment_datetime.strftime("%B %d, %Y at %H:%M") %> -
      <%= link_to(appointment.patient) do %>
        <%= appointment.patient.name %>
      <% end %>
    </li>
  <% end %>
</ul>
