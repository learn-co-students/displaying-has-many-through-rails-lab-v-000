<h1><%= @doctor.name %></h1>
<h2> <%= @doctor.department %> </h2>
<ul><% @doctor.appointments.each do |appointment| %>
  <li><%= link_to appointment.patient.name, patient_path(appointment.patient) %>
    <label>Appointment Time: </label><%= appointment.appointment_datetime.strftime("%B %d, %Y at %H:%M") %>
    <% end %>
  </li>
</ul>
