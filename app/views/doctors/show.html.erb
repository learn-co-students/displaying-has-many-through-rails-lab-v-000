<h1>Doctor Profile</h1>

<h3>Name: <%= @doctor.name %></h3>
<h3>Department: <%= @doctor.department %></h3>

<h4><%=pluralize(@doctor.appointments.count, "Appointment")%>:</h4>
<% @doctor.appointments.each do |appt| %>
  <li>
    <%= appt.appointment_datetime.strftime("%B %d, %Y at %H:%M")%>
    with <%= link_to appt.patient.name, patient_path(appt.patient)%>
  </li>
<% end %>
