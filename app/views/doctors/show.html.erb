<h1><%= @doctor.name %></h1>
<h3>Department: <%= @doctor.department %></h3>
<h3>Appointments:</h3>
<% @doctor.appointments.each do |appointment| %>
  <p>Date and Time: <%= appointment.format_datetime %></p>
  <p>Patient: <%= link_to appointment.patient_name, patient_path(appointment.patient) %></p>
  <br></br>
<% end %>
