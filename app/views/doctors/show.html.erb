<h1>Doctor <%= @doctor.name %></h1>

<ul>
    <% @doctor.appointments.each do |app| %>        
        <li><%= app.appointment_datetime.strftime('%B %e, %Y') + " at " + app.appointment_datetime.strftime('%H:%M')%></li>
    <% end %>
</ul>

<ul>
    <% @doctor.patients.each do |pat| %>
        <li><%= link_to pat.name, patient_path(pat) %></li>
    <% end %>
</ul>

