<h1><%= @doctor.name %></h1>
<p>Department: <%= @doctor.department %></p>
<h3>Appointments</h3>
<% @doctor.appointments.each do |app| %>
  <p>Date: <%= app.appointment_datetime.strftime("%B %d, %Y at %H:%M") %></p>
  <p>Patient: <%= link_to app.patient.name, patient_path(app.patient)%></p>
  <hr>
<% end %>
