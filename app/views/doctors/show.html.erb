<h1><%= @doctor.name %></h1>
<h2>Department: <%= @doctor.department %></h2><br>

<h3>Appointments:</h3>
<ul>
  <%= @doctor.appointments.each do |appointment| %>
  <li><%= appointment.appointment_time %> | <%= link_to appointment.patient.name, patient_path(appointment.patient) %></li>
  <% end %>
</ul>
