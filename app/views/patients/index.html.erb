
<ul>
  <%@patients.each do |patient| %>
    <li>Name: <%=patient.name%>  Number of Appointments: <%=patient.appointments.count%> </li>
    <li>Appointment Times:</li>
      <%patient.appointments.each do |appointment| %>
        <li>Time: <%=appointment.appointment_datetime.strftime("%B %d, %Y at %H:%M") %> </li>
      <% end %>
  <% end %>
</ul>
