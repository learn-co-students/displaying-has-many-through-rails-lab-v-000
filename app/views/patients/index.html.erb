<p id="notice"><%= notice %></p>

<h1>Listing Patients</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <ul>
    <% @patients.each do |patient| %>
        <li>Name: <%= patient.name %></li>
        <li>Number of Appointments: <%= patient.appointments.count%></li>
        <li><%= link_to 'Show', patient %></li>
    <% end %>
    </ul>
  </tbody>
</table>

<br>

<%= link_to 'New Patient', new_patient_path %>
