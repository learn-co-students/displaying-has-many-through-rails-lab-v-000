<h1>Patient Index</h1>
<ul style: "list-unstyled">
    <% @patients.each do |patient| %>
        <li>
            <p>Name: <%= link_to patient.name, patient_path(patient) %>
            Number of Appointments: <%= patient.appointments.count %> </p>
        </li>
    <% end %>    
</ul>