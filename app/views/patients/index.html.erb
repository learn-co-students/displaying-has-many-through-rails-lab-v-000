<!-- displays a link to each patient's show page and the total number of appointments they have. -->
<h2>Patients</h2>

<ul>
  <% @patients.each do |patient| %>
    <li>
      <p>
        Name: <%= link_to patient.name, patient %>
        <br>
        Number of Appointments: <%= patient.appointment_count %>
      </p>
    </li>
  <% end %>
</ul>
