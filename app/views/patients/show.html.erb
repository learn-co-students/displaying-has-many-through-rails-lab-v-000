<h1>Name: <%= @patient.name %></h1>
<h3>Age: <%= @patient.age %></h3>
<h3>Number of Appointments: <%=@patient.appointments.count%> </h3>
<ul>
	<%= @patient.appointments.each do |appt| %>
	<li><%= appt.appointment_datetime.strftime("%B %d, %Y at %H:%M") %> - <%= link_to appt.doctor.name, doctor_path(appt.doctor) %></li>
	<% end %>
</ul>
