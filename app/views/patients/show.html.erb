<h1> Patient Information Page </h1>

<h2> <%= @patient.name %> </h2>
  <div>
    <h3>Appointments:</h3>
    <ul>
      <% @patient.appointments.each do |appt| %>
        <li>Date: <%= appt.date %> ... &nbsp; Doctor: <%= link_to appt.doctor.name, doctor_path(appt.doctor) %>
      <% end %>
    </ul>
  </div>
