<h1>Details for <%=@patient.name%></h1>

<h3>Appointments:</h3>

<ol>
    <%@patient.appointments.each do |appointment|%>
        <li>Doctor: <%=link_to appointment.doctor.name, doctor_path(appointment.doctor)%><br>
        Appointment Time: <%=appointment.appointment_datetime.strftime('%B %d, %Y')%> at <%=appointment.appointment_datetime.strftime('%H:%M') %></li>
        <br>
    <%end%>
</ol>