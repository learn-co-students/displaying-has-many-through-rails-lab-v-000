<ul>
    <% @patient.appointments.each do |app| %>        
        <li><%= app.appointment_datetime.strftime('%B %e, %Y') + " at " + app.appointment_datetime.strftime('%H:%M')%></li>
    <% end %>
</ul>

<ul>
    <% @patient.doctors.each do |doc| %>
        <li><%= link_to doc.name, doctor_path(doc) %></li>
    <% end %>
</ul>
