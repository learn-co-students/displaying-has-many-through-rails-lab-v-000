<h1><%= @patient.name %></h1>

<h3>Appointments:</h3>
<ul>
	<% @patient.appointments.each do |appt| %>

		<h5><%= appt.appointment_datetime.strftime('%B %d, %Y') + " at " + appt.appointment_datetime.strftime('%H:%M') %>  </h5>

		<li><%= link_to appt.doctor.name, doctor_path(appt.doctor) %></li>
	<% end %>
</ul>