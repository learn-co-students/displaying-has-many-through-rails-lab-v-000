<h2>Name: <%= @patient.name %></h2>
<h2>Age :<%= @patient.age %></h2>

<ul>
  <% @patient.appointments.each do |appointment| %>
      <li><%= "#{appointment.appointment_datetime.strftime('%B %e, %Y at %k:%M')}"%> <%= link_to(appointment.doctor.name, doctor_path(appointment.doctor)) %></li>
  <%end%>
</ul>
