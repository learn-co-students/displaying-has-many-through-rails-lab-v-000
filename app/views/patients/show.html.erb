<h2>Welcome <%= @patient.name %></h2>

<h3>Your appointments</h3>

<% @patient.appointments.each do |appointment| %>
    <ul>
    <li>Dr. <%= link_to appointment.doctor.name, doctor_path(appointment.doctor) %> - <%= appointment.appointment_datetime.strftime('%B %d, %Y at %H:%M') %></li>
    </ul>
<% end %>
