
<h3><%= @patient.name %></h3>
<h3>Appointments</h3>
<ul>
<% @patient.appointments.each do |appointment| %>
    <li>Appointment with <%= link_to appointment.doctor.name, appointment.doctor %></li>
        <ul>
            <li><%= appointment.appointment_datetime.strftime("%B %d, %Y at %H:%M") %></li>
        </ul>
<% end %>
</ul>
