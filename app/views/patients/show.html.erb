<ul>
<% @patient.appointments.each do |appt| %>
    <li><%= appt.appointment_datetime.strftime("%B %e") %></li>,
     <li><%= appt.appointment_datetime.strftime("%Y") %></li> at
      <li><%= appt.appointment_datetime.strftime("%H:%M") %></li>
    <li><%= link_to appt.doctor.name, doctor_path(appt.doctor) %></li>
<% end %>
</ul>
