<h3>Patient: <%= @patient.name %></h3>

<ul>
  <% @patient.doctors.each do |doctor| %>
    <li>
      <%= link_to doctor.name, doctor_path(doctor) %>
    </li>
  <% end %>
</ul>
<ul>
  <% @patient.appointments.each do |appointment| %>
   <li>
     <%= link_to appointment.appointment_datetime.strftime("%B %d, %Y at %H:%M"), appointment_path(appointment) %>
   </li>
  <% end %>
</ul>
