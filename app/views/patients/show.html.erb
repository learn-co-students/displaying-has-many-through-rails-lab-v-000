<h2><%= @patient.name%></h2>
  <h3><%=@patient.appointment_count%> appointment(s)</h3>
  <li>
    <% @patient.appointments.each do |appt| %>
    <ul>Doctor Name: <%= link_to appt.doctor_name, doctor_path(appt.doctor)%></ul>
    <ul>Appointment Date: <%= appt.appointment_datetime.strftime("%B %d, %Y at     %H:%M")%></ul>
    <% end %>
  </li>

