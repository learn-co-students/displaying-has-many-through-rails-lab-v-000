<h1>Appointments Scheduled for <%= @patient.name %>:</h1>

<ul>
  <% @patient.appointments.each do |appointment| %>
    <li>
      Dr. <%= link_to appointment.doctor.name, doctor_path(appointment.doctor) %> on
      <%= appointment.appointment_datetime.strftime("%B %d, %Y at %H:%M") %>
    </li>
  <% end %>
</ul>
