<h1>Patient Profile</h1>

<h3>Name: <%= @patient.name %></h3>

<h4><%=pluralize(@patient.appointments.count, "Appointment")%>:</h4>
<% @patient.appointments.each do |appt| %>
  <li>
    <%= appt.appointment_datetime.strftime("%B %d, %Y at %H:%M")%>
    with <%= link_to appt.doctor.name, doctor_path(appt.doctor)%>
  </li>
<% end %>
