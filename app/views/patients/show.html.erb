<h2> <%= @patient.name %></h2>

<table><th>time</th><th>doctor</th>

<% @patient.appointments.each do |appointment| %>
  <tr><td><%= appointment.appointment_datetime.strftime("%B %d, %Y at %H:%M") %></td>
  <td><%= link_to appointment.doctor.name, doctor_path(appointment.doctor) %></td></tr>
<% end %>

</table>
