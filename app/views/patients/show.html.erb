<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @patient.name %>
</p>

<p>
<strong>Appointment Times: </strong></p>

<% @patient.appointments.each do |appt| %>
Doctor: <%= link_to appt.doctor.name, doctor_path(appt.doctor) %>
<%= appt.appointment_datetime.strftime("%B") %>
<%= appt.appointment_datetime.strftime("%d") %>,
<%= appt.appointment_datetime.strftime("%Y") %> at
<%= appt.appointment_datetime.strftime("%H") %>:<%= appt.appointment_datetime.strftime("%M") %>
<% end %>
<%= link_to 'Edit', edit_patient_path(@patient) %> |
<%= link_to 'Back', patients_path %>