<h2>Patient: <%= @patient.name %></h2>

<h3>Appointments:</h3>
<ul>
  <% @patient.appointments.sort_by{|appointment| appointment.appointment_datetime}.each do |appointment| %>
    <li>
      <%= appointment.appointment_datetime.strftime("%B %d, %Y at %R") %><br>
      Doctor: <%= link_to appointment.doctor.name, doctor_path(appointment.doctor) %>
    </li><br>
  <% end %>
</ul>
