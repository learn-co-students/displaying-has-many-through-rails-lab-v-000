<%# Appointment#show page that shows the date, time, patient, 
and doctor for that particular appointment.  %>

<h4><%= @appointment.appointment_datetime.strftime("%B %d, %Y at %H:%M") %></h4>
<%= link_to @appointment.doctor.name, doctor_path(@appointment.doctor) %>
<%= link_to @appointment.patient.name, patient_path(@appointment.patient) %>

