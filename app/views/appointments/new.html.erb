<%= form_for @appointment do |f| %>
  Title: <%= f.text_field :appointment_datetime %>
  <%= f.fields_for :doctors do |doctor| %>
    <br><br>
    <%= doctor.label :name %><br>
    <%= doctor.text_field :name %>
    <br>
  <% end %>

  <%= f.fields_for :patients do |patient| %>
    <br><br>
    <%= patient.label :name %><br>
    <%= patient.text_field :name %>
    <br>
  <% end %>

  <%= submit_tag 'Save' %>
<% end %>